<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="500.0" prefWidth="430.0"
      spacing="10.0" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">
    <fx:define>
        <Font fx:id="FONT" size="18"/>
    </fx:define>
    <children>
        <StackPane alignment="CENTER">
            <children>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="TRANSPARENT" height="75.0" stroke="#5e5b5b"
                           strokeType="INSIDE" width="430.0"/>
                <Text fx:id="output" font="$FONT" wrappingWidth="300.0"/>
            </children>
        </StackPane>
        <HBox alignment="CENTER" spacing="10" prefHeight="75.0" prefWidth="500.0">
            <children>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="7" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="8" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="9" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="/" onAction="#doOnAction"/>

            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10" prefHeight="75.0" prefWidth="500.0">
            <children>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="4" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="5" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="6" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="*" onAction="#doOnAction"/>

            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10" prefHeight="75.0" prefWidth="500.0">
            <children>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="1" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="2" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="3" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="-" onAction="#doOnAction"/>

            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10" prefHeight="75.0" prefWidth="500.0">
            <children>
                <Button prefHeight="50" font="$FONT" prefWidth="210.0" text="0" onAction="#clickedButton"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="=" onAction="#doOnAction"/>
                <Button prefHeight="50" font="$FONT" prefWidth="100.0" text="+" onAction="#doOnAction"/>

            </children>
        </HBox>

    </children>
</VBox>
